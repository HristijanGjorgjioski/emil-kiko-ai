
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions", "fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

model Movie {
  id        String   @id @default(uuid())
  name      String
  genre     String[] 
  director  String
  cast      String[] 
  setting   String 
  plot      String
  embedding Unsupported("vector(1536)")?
  tsv Unsupported("tsvector")?
  @@index([tsv], type: Gin)
}
